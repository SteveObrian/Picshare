<p>
  <strong><%= @user %></strong>
</p>

<p>
  <% @user.posts.each do |post| %>
    <%= link_to image_tag(post.image.thumb.url), post %>
    <p>
      <em><%= post.caption %></em>
      <strong>-<%= link_to post.user, post.user %></strong>
    </p>
  <% end %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', posts_path %>
